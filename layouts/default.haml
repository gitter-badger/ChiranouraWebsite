  %head
    %meta{:charset =>"utf-8"}
    %meta{:name =>"generator", :content =>"nanoc 3.1.7"}
    %title
      = "ちらのうら - #{@item[:title]}"
    %link{:rel =>"stylesheet", :type =>"text/css", :href =>"/stylesheets/screen.css", :media =>"screen"}
    %script{:type => "text/x-mathjax-config"}
      MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
    %script{:type => "text/javascript", :src => "https://c328740.ssl.cf1.rackcdn."+ |
      "com/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"}                 |
