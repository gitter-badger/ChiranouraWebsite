!!! XML
!!! 5
%html{:xmlns =>"http://www.w3.org/1999/xhtml"}
  %head
    %meta{:charset =>"utf-8"}
    %meta{:name =>"generator", :content =>"nanoc 3.1.7"}
    %title
      = "ちらのうら - #{@item[:title]}"
    %link{:rel =>"stylesheet", :type =>"text/css", :href =>"/stylesheets/screen.css", :media =>"screen"}
  %body
    #container
      #header
        %h1 ちらのうら

      #main
        - if @item[:kind] == 'article'
          %div.article
            %h2(class="#{@item[:category]}") #{link_to(@item[:title], @item.path)}
            %h3(class="#{@item[:category]}") Created in: #{attribute_to_time(@item[:created_at]).to_iso8601_date} Category: #{category_for(@item)} Tags: #{tags_for(@item)} Author: #{@item[:author]}
            = yield

            #disqus_thread
            :javascript
              var disqus_shortname = 'chiranoura';
              var disqus_title = '#{@item[:title]}';
              var disqus_identifier = '#{@item.identifier}';
              var disqus_category_id = '#{get_cate_id(@item[:category])}';
              (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
              })();
            %noscript
              Please enable JavaScript to view the
              %a{:href=>"http://disqus.com/?ref_noscript"} comments
              powered by Disqus.
            %a.dsq-brlink{:href=>"http://disqus.com"}
              comments powered by 
              %span.logo-disqus Disqus
        - else
          = yield

      #side
        - if @item[:category_meta] == nil
          = render('_side_summary', {:category => @item[:category]})
        - else
          = render('_side_summary', {:category => @item[:category_meta]})

      #footer
        %p copyright
